<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AssemblyName>CollateExample</AssemblyName>

        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <!-- Work-around for us since our project name doesn't match the mod's internal name.
             I wish we could just use periods in internal names, but tML does not support it. -->
        <RootNamespace>CollateExample</RootNamespace>
    </PropertyGroup>

    <!-- Mod properties/ -->
    <PropertyGroup>
        <Version>1.0.0</Version>
        <DisplayName>Collate Example Mod</DisplayName>
        <Author>Tomat</Author>
        <Homepage>https://github.com/rejuvena/collate</Homepage>
        <HideCode>false</HideCode>
        <HideResources>false</HideResources>
        <IncludeSource>true</IncludeSource>
        <IncludePDB>true</IncludePDB> <!-- TODO: Appears deprecated? -->
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Rejuvena.Collate" Version="1.0.0" />
    </ItemGroup>

</Project>
